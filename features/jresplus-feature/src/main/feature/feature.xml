<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<features name="fcloud-${fcloud.version}"
          xmlns="http://karaf.apache.org/xmlns/features/v1.2.1"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://karaf.apache.org/xmlns/features/v1.2.1 http://karaf.apache.org/xmlns/features/v1.2.1">

    <feature name="jresplus-feature" description="FCloud JRES Plus Feature" version="${fcloud.version}">
        <!-- commons -->
        <bundle>mvn:commons-io/commons-io/1.4</bundle>
        <bundle>mvn:commons-lang/commons-lang/2.6</bundle>
        <bundle>mvn:commons-codec/commons-codec/1.9</bundle>
        <bundle>mvn:commons-digester/commons-digester/1.8.1</bundle>
        <bundle>mvn:commons-beanutils/commons-beanutils/1.8.3</bundle>
        <bundle>mvn:commons-fileupload/commons-fileupload/1.3.1</bundle>
        <bundle>mvn:commons-collections/commons-collections/3.2.1</bundle>
        <!-- javax -->
        <bundle>mvn:javax.validation/validation-api/1.1.0.Final</bundle>
        <bundle>mvn:org.apache.servicemix.bundles/org.apache.servicemix.bundles.hibernate-validator/4.1.0.Final_3</bundle>
        <!-- spring osgi -->
        <bundle>mvn:com.hundsun.fcloud.bundles/spring-osgi-io/${spring.osgi.version}</bundle>
        <bundle>mvn:com.hundsun.fcloud.bundles/spring-osgi-context/${spring.osgi.version}</bundle>
        <bundle>mvn:com.hundsun.fcloud.bundles/spring-osgi-web/${spring.osgi.version}</bundle>
        <!-- spring -->
        <bundle>mvn:org.apache.servicemix.bundles/org.apache.servicemix.bundles.aopalliance/1.0_6</bundle>
        <bundle>mvn:org.springframework/spring-aop/${spring.version}</bundle>
        <bundle>mvn:org.springframework/spring-expression/${spring.version}</bundle>
        <bundle>mvn:org.springframework/spring-asm/${spring.version}</bundle>
        <bundle>mvn:org.springframework/spring-core/${spring.version}</bundle>
        <bundle>mvn:org.springframework/spring-beans/${spring.version}</bundle>
        <bundle>mvn:org.springframework/spring-context/${spring.version}</bundle>
        <bundle>mvn:org.springframework/spring-context-support/${spring.version}</bundle>
        <bundle>mvn:org.springframework/spring-web/${spring.version}</bundle>
        <bundle>mvn:org.springframework/spring-webmvc/${spring.version}</bundle>
        <!-- velocity -->
        <bundle>mvn:org.apache.servicemix.bundles/org.apache.servicemix.bundles.velocity/1.7_6</bundle>
        <bundle>mvn:org.apache.servicemix.bundles/org.apache.servicemix.bundles.velocity-tools/2.0_1</bundle>
        <!-- fastjson -->
        <bundle>mvn:com.hundsun.fcloud.bundles/fastjson/1.2.4</bundle>
        <!-- hessian -->
        <bundle>mvn:com.hundsun.fcloud.bundles/hessian/4.0.7</bundle>
        <!-- jresplus -->
        <bundle>mvn:com.hundsun.fcloud.bundles/jresplus-common/1.0.5</bundle>
        <bundle>mvn:com.hundsun.fcloud.bundles/jresplus-mvc/1.0.7</bundle>
        <bundle>mvn:com.hundsun.fcloud.bundles/jresplus-ui/1.0.9</bundle>
    </feature>

</features>
