    <modelVersion>4.0.0</modelVersion>

    <groupId>com.hundsun.fcloud.platform</groupId>
    <artifactId>features</artifactId>
    <packaging>kar</packaging>

    <name>FCloud Platform :: Assemblies :: Features</name>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.karaf.tooling</groupId>
                <artifactId>karaf-maven-plugin</artifactId>
                <configuration>
                    <finalName>fcloud-features-${project.version}</finalName>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>com.hundsun.fcloud.platform.servlet</groupId>
            <artifactId>servlet-api</artifactId>
        </dependency>
        <dependency>
            <groupId>com.hundsun.fcloud.platform.servlet</groupId>
            <artifactId>servlet-codec</artifactId>
        </dependency>
        <dependency>
            <groupId>com.hundsun.fcloud.platform.servlet</groupId>
            <artifactId>servlet-runner</artifactId>
        </dependency>
    </dependencies>

</project>